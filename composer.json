{
	"name": "trejjam/thepay-lib",
	"description": "The pay library",
	"keywords": [
		"the pay"
	],
	"license": [
		"MIT"
	],
	"require": {
		"php": ">=7.1",

		"ext-json": "*",
		"ext-soap": "*",
		"ext-hash": "*"
	},
	"require-dev": {
		"nette/tester": "@dev",

		"phpstan/phpstan": "~0.10.2",
		"symplify/easy-coding-standard": "~4.6.0"
	},
	"suggest": {
		"trejjam/thepay": "to use as nette extension"
	},
	"autoload": {
		"psr-4": {
			"Tp\\": "src/"
		},
		"classmap": [
			"src/exceptions/"
		]
	},
	"extra": {
		"branch-alias": {
			"master": "v4.0.x-dev"
		}
	}
}
